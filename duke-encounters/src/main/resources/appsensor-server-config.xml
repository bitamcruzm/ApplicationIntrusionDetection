<?xml version="1.0" encoding="UTF-8"?>
<appsensor-server-config xmlns="https://www.owasp.org/index.php/OWASP_AppSensor_Project/xsd/appsensor_server_config_2.0.xsd">
    <client-application-identification-header-name>X-Appsensor-Client-Application-Name
    </client-application-identification-header-name>

    <client-applications>
        <client-application>
            <name>duke-encounters</name>
            <roles>
                <role>ADD_EVENT</role>
                <role>ADD_ATTACK</role>
                <role>GET_RESPONSES</role>
                <role>EXECUTE_REPORT</role>
            </roles>
        </client-application>
    </client-applications>

    <!-- see https://www.owasp.org/index.php/AppSensor_DetectionPoints for the detection points list -->

    <detection-points>
        <detection-point>
            <category>Access Control</category>
            <id>ACE2-1001</id>
            <threshold>
                <count>1</count>
                <interval unit="minutes">5</interval>
            </threshold>
            <responses>
                <response>
                    <action>log</action>
                </response>
                <response>
                    <action>disableUser</action>
                </response>
            </responses>
        </detection-point>
        <detection-point>
            <category>Authentication</category>
            <id>AE3-1001</id>
            <threshold>
                <count>10</count>
                <interval unit="minutes">5</interval>
            </threshold>
            <responses>
                <response>
                    <action>log</action>
                </response>
                <response>
                    <action>logout</action>
                </response>
                <response>
                    <action>disableUser</action>
                </response>
                <response>
                    <action>disableComponentForSpecificUser</action>
                    <interval unit="minutes">30</interval>
                </response>
                <response>
                    <action>disableComponentForAllUsers</action>
                    <interval unit="minutes">10</interval>
                </response>
            </responses>
        </detection-point>
        <detection-point>
            <category>Input Validation</category>
            <id>IE1-1001</id>
            <threshold>
                <count>2</count>
                <interval unit="minutes">5</interval>
            </threshold>
            <responses>
                <response>
                    <action>log</action>
                </response>
                <response>
                    <action>logout</action>
                </response>
                <response>
                    <action>disableUser</action>
                </response>
            </responses>
        </detection-point>
        <detection-point>
            <category>Command Injection</category>
            <id>CIE1-1001</id>
            <threshold>
                <count>2</count>
                <interval unit="minutes">5</interval>
            </threshold>
            <responses>
                <response>
                    <action>log</action>
                </response>
                <response>
                    <action>logout</action>
                </response>
                <response>
                    <action>disableUser</action>
                </response>
            </responses>
        </detection-point>
        <detection-point>
            <category>Command Injection</category>
            <id>CIE2-1001</id>
            <threshold>
                <count>1</count>
                <interval unit="minutes">5</interval>
            </threshold>
            <responses>
                <response>
                    <action>disableUser</action>
                </response>
            </responses>
        </detection-point>
        <detection-point>
            <category>Input Validation</category>
            <id>IE5-1001</id>
            <threshold>
                <count>1</count>
                <interval unit="minutes">5</interval>
            </threshold>
            <responses>
                <response>
                    <action>log</action>
                </response>
                <response>
                    <action>disableUser</action>
                </response>
            </responses>
        </detection-point>
        <detection-point>
            <category>Request</category>
            <id>RE8-1001</id>
            <threshold>
                <count>5</count>
                <interval unit="minutes">5</interval>
            </threshold>
            <responses>
                <response>
                    <action>log</action>
                </response>
                <response>
                    <action>logout</action>
                </response>
            </responses>
        </detection-point>
        <detection-point>
            <category>System Trend</category>
            <id>STE1-1001</id>
            <threshold>
                <count>10</count>
                <interval unit="minutes">5</interval>
            </threshold>
            <responses>
                <response>
                    <action>log</action>
                </response>
                <response>
                    <action>logout</action>
                </response>
                <response>
                    <action>disableUser</action>
                </response>
                <response>
                    <action>disableComponentForSpecificUser</action>
                    <interval unit="minutes">30</interval>
                </response>
                <response>
                    <action>disableComponentForAllUsers</action>
                    <interval unit="minutes">10</interval>
                </response>
            </responses>
        </detection-point>
        <detection-point>
            <category>System Trend</category>
            <id>STE2-1001</id>
            <threshold>
                <count>12</count>
                <interval unit="minutes">5</interval>
            </threshold>
            <responses>
                <response>
                    <action>log</action>
                </response>
                <response>
                    <action>logout</action>
                </response>
                <response>
                    <action>disableUser</action>
                </response>
                <response>
                    <action>disableComponentForSpecificUser</action>
                    <interval unit="minutes">30</interval>
                </response>
                <response>
                    <action>disableComponentForAllUsers</action>
                    <interval unit="minutes">10</interval>
                </response>
            </responses>
        </detection-point>
    </detection-points>
</appsensor-server-config>